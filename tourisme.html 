    <script>
        // Main function that runs when the page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Get all necessary DOM elements
            const usernameInput = document.getElementById('username-input');
            const searchBtn = document.getElementById('search-btn');
            const profileContainer = document.getElementById('profile-container');
            const loading = document.getElementById('loading');
            const errorMessage = document.getElementById('error-message');

            // Load ferhatgnlts profile by default when page loads
            loadDefaultProfile();

            // Function to load default profile (ferhatgnlts)
            function loadDefaultProfile() {
                usernameInput.value = 'ferhatgnlts';
                searchProfile();
            }

            // Add event listener for Enter key in input field
            usernameInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    searchProfile();
                }
            });

            // Add click event listener for search button
            searchBtn.addEventListener('click', searchProfile);

            // Main function to search and display GitHub profile
            function searchProfile() {
                const username = usernameInput.value.trim();
                
                // Validate input
                if (!username) {
                    showError('Please enter a GitHub username.');
                    return;
                }

                // Clear previous errors and show loading state
                hideError();
                profileContainer.style.display = 'none';
                loading.style.display = 'block';

                // Fetch user data from GitHub API
                fetch(`https://api.github.com/users/${username}`)
                    .then(response => {
                        // Handle different response statuses
                        if (!response.ok) {
                            if (response.status === 404) {
                                throw new Error('User not found.');
                            } else if (response.status === 403) {
                                throw new Error('API rate limit exceeded. Please try again later.');
                            } else {
                                throw new Error('An error occurred. Please try again later.');
                            }
                        }
                        return response.json();
                    })
                    .then(userData => {
                        // Display the user profile information
                        displayUserProfile(userData);
                        
                        // Fetch additional repository data for star count
                        return fetch(`https://api.github.com/users/${username}/repos`);
                    })
                    .then(response => {
                        if (!response.ok) return [];
                        return response.json();
                    })
                    .then(repos => {
                        // Calculate total stars from all repositories
                        const totalStars = repos.reduce((acc, repo) => acc + repo.stargazers_count, 0);
                        document.getElementById('stars').textContent = totalStars.toLocaleString();
                        
                        // Hide loading and show profile
                        loading.style.display = 'none';
                        profileContainer.style.display = 'block';
                    })
                    .catch(error => {
                        // Handle any errors that occurred
                        loading.style.display = 'none';
                        showError(error.message);
                    });
            }

            // Function to display user profile data
            function displayUserProfile(user) {
                // Set avatar image
                document.getElementById('avatar').src = user.avatar_url || '';
                
                // Set username and display name
                const usernameElement = document.getElementById('username');
                usernameElement.textContent = `@${user.login}`;
                
                // Update the onclick handler with the current username
                usernameElement.onclick = function() {
                    window.open(`https://github.com/${user.login}`, '_blank');
                };
                
                document.getElementById('name').textContent = user.name || '';
                
                // Set basic statistics
                document.getElementById('followers').textContent = user.followers?.toLocaleString() || '0';
                document.getElementById('following').textContent = user.following?.toLocaleString() || '0';
                document.getElementById('repos').textContent = user.public_repos?.toLocaleString() || '0';
                document.getElementById('gists').textContent = user.public_gists?.toLocaleString() || '0';
                
                // Set bio text
                const bioElement = document.getElementById('bio');
                bioElement.textContent = user.bio || 'No bio available.';
                
                // Set location information
                updateDetail('location', user.location, 'No location');
                
                // Set company information
                updateDetail('company', user.company, 'No company');
                
                // Set website/blog link
                const blogItem = document.getElementById('blog-item');
                const blogLink = document.getElementById('blog');
                if (user.blog) {
                    let blogUrl = user.blog;
                    if (!blogUrl.startsWith('http://') && !blogUrl.startsWith('https://')) {
                        blogUrl = 'https://' + blogUrl;
                    }
                    blogLink.href = blogUrl;
                    blogLink.textContent = user.blog.length > 30 ? user.blog.substring(0, 30) + '...' : user.blog;
                    blogItem.style.display = 'flex';
                } else {
                    blogItem.style.display = 'none';
                }
                
                // Set Twitter information
                const twitterItem = document.getElementById('twitter-item');
                const twitterLink = document.getElementById('twitter');
                if (user.twitter_username) {
                    twitterLink.href = `https://twitter.com/${user.twitter_username}`;
                    twitterLink.textContent = `@${user.twitter_username}`;
                    twitterItem.style.display = 'flex';
                } else {
                    twitterItem.style.display = 'none';
                }
                
                // Set email information
                const emailItem = document.getElementById('email-item');
                const emailLink = document.getElementById('email');
                if (user.email) {
                    emailLink.href = `mailto:${user.email}`;
                    emailLink.textContent = user.email;
                    emailItem.style.display = 'flex';
                } else {
                    emailItem.style.display = 'none';
                }
                
                // Set account creation date
                const createdItem = document.getElementById('created-item');
                const createdText = document.getElementById('created');
                if (user.created_at) {
                    const date = new Date(user.created_at);
                    createdText.textContent = date.toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    });
                    createdItem.style.display = 'flex';
                } else {
                    createdItem.style.display = 'none';
                }
            }

            // Helper function to update detail fields
            function updateDetail(elementId, value, defaultValue) {
                const element = document.getElementById(elementId);
                const parent = document.getElementById(`${elementId}-item`);
                
                if (value) {
                    element.textContent = value;
                    parent.style.display = 'flex';
                } else {
                    element.textContent = defaultValue;
                    parent.style.display = 'none';
                }
            }

            // Function to display error messages
            function showError(message) {
                errorMessage.textContent = message;
                errorMessage.style.display = 'block';
            }

            // Function to hide error messages
            function hideError() {
                errorMessage.style.display = 'none';
            }
        });
    </script>
</body>
</html>